<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bbg="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.talenton.organ.ui.user.ShowPersonalInfoActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/perfect_bg"
            android:scaleType="centerCrop"/>
        <com.talenton.base.widget.CircleImageView
            android:id="@+id/user_logo"
            android:layout_width="@dimen/height_120"
            android:layout_height="@dimen/height_120"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@mipmap/user_photo"
            bbg:civ_border_color="@color/white"
            bbg:civ_border_width="2dp" />
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/text_34"
            android:layout_gravity="bottom|center"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="test"
            android:layout_marginBottom="@dimen/space_30_0" />
        <ImageView
            android:id="@+id/left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/actionbar_back_btn"
            android:padding="@dimen/space_15_0"
            android:scaleType="centerCrop" />
    </FrameLayout>
    <FrameLayout
        android:id="@+id/frame_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

    </FrameLayout>
</LinearLayout>
