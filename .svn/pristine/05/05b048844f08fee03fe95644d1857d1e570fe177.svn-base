<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.talenton.organ.ui.feed.AttentionCircleActivity">
    <ViewStub
        android:id="@+id/vs_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/global_app_bar" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/layout_input_code"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_40"
                android:paddingLeft="@dimen/space_15_0"
                android:paddingRight="@dimen/space_15_0"
                android:background="@drawable/btn_white_bg_selector"
                android:gravity="center"
                android:orientation="horizontal"
                android:onClick="onClick">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/circle_icon_invite"
                    android:drawablePadding="@dimen/space_5_0"
                    android:singleLine="true"
                    android:text="@string/circle_title_attention_by_code"
                    android:textSize="@dimen/text_32"
                    />
                <ImageView
                    android:layout_width="@dimen/height_15"
                    android:layout_height="@dimen/height_15"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/xy_icon" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_input_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_40"
                android:paddingLeft="@dimen/space_15_0"
                android:paddingRight="@dimen/space_15_0"
                android:layout_marginTop="@dimen/space_1_0"
                android:background="@drawable/btn_white_bg_selector"
                android:gravity="center"
                android:orientation="horizontal"
                android:onClick="onClick">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/circle_icon_phone"
                    android:drawablePadding="@dimen/space_5_0"
                    android:singleLine="true"
                    android:text="@string/circle_title_attention_by_phone"
                    android:textSize="@dimen/text_32"
                    />
                <ImageView
                    android:layout_width="@dimen/height_15"
                    android:layout_height="@dimen/height_15"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/xy_icon" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_school_baby"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_40"
                android:paddingLeft="@dimen/space_15_0"
                android:paddingRight="@dimen/space_15_0"
                android:layout_marginTop="@dimen/space_1_0"
                android:background="@drawable/btn_white_bg_selector"
                android:gravity="center"
                android:orientation="horizontal"
                android:onClick="onClick">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/circle_icon_same_school"
                    android:drawablePadding="@dimen/space_5_0"
                    android:singleLine="true"
                    android:text="@string/circle_title_attention_by_baby"
                    android:textSize="@dimen/text_32"
                    />
                <ImageView
                    android:layout_width="@dimen/height_15"
                    android:layout_height="@dimen/height_15"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/xy_icon" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_age"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_40"
                android:paddingLeft="@dimen/space_15_0"
                android:paddingRight="@dimen/space_15_0"
                android:layout_marginTop="@dimen/space_15_0"
                android:background="@drawable/btn_white_bg_selector"
                android:gravity="center"
                android:orientation="horizontal"
                android:onClick="onClick">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/circle_icon_age"
                    android:drawablePadding="@dimen/space_5_0"
                    android:singleLine="true"
                    android:text="@string/circle_title_attention_by_age"
                    android:textSize="@dimen/text_32"
                    />
                <ImageView
                    android:layout_width="@dimen/height_15"
                    android:layout_height="@dimen/height_15"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/xy_icon" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_subject"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_40"
                android:paddingLeft="@dimen/space_15_0"
                android:paddingRight="@dimen/space_15_0"
                android:layout_marginTop="@dimen/space_15_0"
                android:background="@drawable/btn_white_bg_selector"
                android:gravity="center"
                android:orientation="horizontal"
                android:onClick="onClick">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/circle_icon_theme"
                    android:drawablePadding="@dimen/space_5_0"
                    android:singleLine="true"
                    android:text="@string/circle_title_attention_by_subject"
                    android:textSize="@dimen/text_32"
                    />
                <ImageView
                    android:layout_width="@dimen/height_15"
                    android:layout_height="@dimen/height_15"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/xy_icon" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/list_div_color"
                android:visibility="gone"/>
            <LinearLayout
                android:id="@+id/layout_school"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_40"
                android:paddingLeft="@dimen/space_15_0"
                android:paddingRight="@dimen/space_15_0"
                android:layout_marginTop="@dimen/space_15_0"
                android:background="@drawable/btn_white_bg_selector"
                android:gravity="center"
                android:orientation="horizontal"
                android:onClick="onClick">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/circle_icon_school"
                    android:drawablePadding="@dimen/space_5_0"
                    android:singleLine="true"
                    android:text="@string/circle_title_attention_by_school"
                    android:textSize="@dimen/text_32"
                    />
                <ImageView
                    android:layout_width="@dimen/height_15"
                    android:layout_height="@dimen/height_15"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/xy_icon" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/list_div_color"
                android:visibility="gone"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
