<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:lsg="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">


    <com.talenton.organ.widget.AdvertisementView
        android:id="@+id/ad_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_150" />


    <!--课堂筛选区-->
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_height="@dimen/height_90">

        <com.talenton.base.widget.ImageTextButton
            android:id="@+id/btn_class_all"
            lsg:text_size="@dimen/text_26"
            lsg:text="@string/school_class_text_all"
            lsg:src="@mipmap/icon_all"
            lsg:img_text_space="@dimen/space_10"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <com.talenton.base.widget.ImageTextButton
            android:id="@+id/btn_class_experimental"
            lsg:text_size="@dimen/text_26"
            lsg:text="@string/school_class_text_experimental"
            lsg:src="@mipmap/icon_sy"
            lsg:img_text_space="@dimen/space_10"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <com.talenton.base.widget.ImageTextButton
            android:id="@+id/btn_class_recommend"
            lsg:text_size="@dimen/text_26"
            lsg:text="@string/school_class_text_recommend"
            lsg:src="@mipmap/icon_tj"
            lsg:img_text_space="@dimen/space_10"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />


        <com.talenton.base.widget.ImageTextButton
            android:id="@+id/btn_class_hot"
            lsg:text_size="@dimen/text_26"
            lsg:text="@string/school_class_text_hot"
            lsg:src="@mipmap/icon_rm"
            lsg:img_text_space="@dimen/space_10"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_10_0"/>

    <TextView
        android:layout_marginLeft="@dimen/space_15_0"
        android:layout_marginRight="@dimen/space_15_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/school_class_text_my"
        android:textStyle="bold"
        android:textSize="@dimen/text_32"
        android:textColor="@color/text_main"
        android:layout_marginTop="@dimen/space_15_0" />

</LinearLayout>