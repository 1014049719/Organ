<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary" >

    <TextView
        android:id="@+id/take_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawablePadding="@dimen/space_7_5"
        android:drawableTop="@mipmap/post_take_photo"
        android:gravity="center"
        android:text="@string/images_take_photo"
        android:textColor="@color/white"
        android:textSize="@dimen/text_34" />
    <ImageView
        android:id="@+id/iv_take_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@mipmap/camera_video"
        android:visibility="gone" />
</FrameLayout>
