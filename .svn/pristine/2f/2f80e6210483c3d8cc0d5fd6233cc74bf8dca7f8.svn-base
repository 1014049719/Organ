<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_container"
    tools:context="com.talenton.organ.ui.school.MyClassroomActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ViewStub
            android:id="@+id/vs_action_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/global_app_bar" />

        <com.talenton.organ.widget.MsgTipsView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/space_8_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


    <com.handmark.pulltorefresh.library.PullToRefreshSlideListView
        android:id="@+id/list"
        android:background="@color/white"
        android:divider="@null"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
