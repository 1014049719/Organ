<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/testSchool_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginTop="@dimen/space_10"
        android:layout_marginBottom="@dimen/space_10"
        android:src="@mipmap/load_image" />

    <TextView
        android:id="@+id/testSchoolName_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/testSchool_image"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_toRightOf="@+id/testSchool_image"
        android:text="New Text"
        android:textStyle="bold"
        android:textColor="#333333"
        android:textSize="@dimen/text_32" />


    <TextView
        android:id="@+id/detail_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/testSchoolName_textView"
        android:layout_below="@+id/testSchoolName_textView"
        android:layout_marginTop="@dimen/space_10"
        android:text="学校介绍信dsdfsdfdsfdsfdsf"
        android:maxLines="2"
        android:textColor="#666666" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignLeft="@+id/detail_textView"
        android:layout_alignBottom="@+id/testSchool_image"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/locate_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/address" />
        <TextView
            android:id="@+id/testSchoollocation_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:textColor="#999999" />
    </LinearLayout>


</RelativeLayout>