<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/time_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_30"
        android:layout_marginTop="@dimen/space_20_0"
        android:gravity="bottom|center"
        android:text="今天 12:26"
        android:textColor="#999999"
        android:textSize="@dimen/text_28"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_15_0"
        android:layout_marginTop="@dimen/space_10"
        android:background="@drawable/btn_white_corner_bg"
        android:layout_marginLeft="@dimen/space_10_0"
        android:layout_marginRight="@dimen/space_10_0"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/actionImage"
            android:layout_height="150dp"
            android:layout_width="315dp"
            android:layout_below="@+id/time_tv"
            android:scaleType="centerCrop"
            android:layout_marginLeft="@dimen/space_10_0"
            android:layout_marginRight="@dimen/space_10_0"
            android:src="@mipmap/load_image" />
        <TextView
            android:id="@+id/actionName_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_20_0"
            android:text="最新活动啊啊啊啊啊啊啊啊啊啊啊"
            android:textColor="#333333"
            android:textStyle="bold"
            android:textSize="@dimen/text_32"
            android:layout_marginLeft="@dimen/space_10_0"
            android:layout_marginRight="@dimen/space_10_0" />
        <TextView
            android:id="@+id/actionDescribe_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="大家热闹起来吧人体润"
            android:layout_marginLeft="@dimen/space_10_0"
            android:layout_marginRight="@dimen/space_10_0"
            android:layout_marginTop="@dimen/space_10"
            android:textColor="#666666"
            android:textSize="@dimen/text_28"/>
    </LinearLayout>
</LinearLayout>