<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bbg="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.talenton.organ.ui.feed.ShowCircleActivity">
    <ViewStub
        android:id="@+id/vs_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/global_app_bar" />
    <FrameLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="2">
        <ImageView
            android:id="@+id/cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/baby_default_cover" />
        <com.talenton.base.widget.CircleImageView
            android:id="@+id/user_logo"
            android:layout_width="@dimen/mine_avatar_width"
            android:layout_height="@dimen/mine_avatar_width"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@mipmap/user_photo"
            bbg:civ_border_color="@color/white"
            bbg:civ_border_width="2dp" />
        <ImageView
            android:id="@+id/iv_change_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/change_background"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="@dimen/space_15_0"
            android:layout_marginRight="@dimen/space_15_0"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="3"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_50"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:layout_width="@dimen/height_80"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_15_0"
                android:text="@string/circle_description"
                android:textSize="@dimen/text_28"
                android:textColor="@color/text_main" />
            <TextView
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_28"
                android:textColor="@color/text_main"
                android:layout_marginRight="@dimen/space_15_0"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
