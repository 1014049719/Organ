<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="4dp"
    android:paddingTop="4dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/popup_main_bg"
        android:gravity="start"
        android:minWidth="@dimen/height_100"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/popup_edit"
            android:drawablePadding="@dimen/space_7_5"
            android:drawableStart="@mipmap/popup_edit"
            android:gravity="start"
            android:padding="@dimen/space_15_0"
            android:text="@string/feeds_list_edit"
            android:textColor="@color/text_light"
            android:textSize="@dimen/text_34" />

        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/black_divider" />

        <TextView
            android:id="@+id/share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/popup_share"
            android:drawablePadding="@dimen/space_7_5"
            android:drawableStart="@mipmap/popup_share"
            android:gravity="start"
            android:padding="@dimen/space_15_0"
            android:text="@string/feeds_list_forward"
            android:textColor="@color/text_light"
            android:textSize="@dimen/text_34" />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/black_divider" />

        <TextView
            android:id="@+id/collect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/popup_collect"
            android:drawablePadding="@dimen/space_7_5"
            android:drawableStart="@mipmap/popup_collect"
            android:gravity="start"
            android:padding="@dimen/space_15_0"
            android:text="@string/feeds_list_collect"
            android:textColor="@color/text_light"
            android:textSize="@dimen/text_34"
            android:visibility="gone"/>

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/black_divider"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/popup_delete"
            android:drawablePadding="@dimen/space_7_5"
            android:drawableStart="@mipmap/popup_delete"
            android:gravity="start"
            android:padding="@dimen/space_15_0"
            android:text="@string/feeds_list_delete"
            android:textColor="@color/text_light"
            android:textSize="@dimen/text_34" />
    </LinearLayout>

</FrameLayout>