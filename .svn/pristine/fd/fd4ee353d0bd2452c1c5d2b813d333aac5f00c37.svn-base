<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/goods_thumb_imageView"
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_marginTop="@dimen/space_8"
            android:src="@drawable/i2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_marginTop="@dimen/space_8"
            android:orientation="vertical">
            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="乐高没偶么么么么么么商品撒旦的撒旦是的撒旦"
                android:textColor="#333333"
                android:textSize="@dimen/text_38" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/goods_attr_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_10_0"
                        android:text="颜色：红色"
                        android:textColor="#666666"
                        android:textSize="@dimen/text_32" />
                    <TextView
                        android:id="@+id/goods_number_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_5_0"
                        android:text="数量：1"
                        android:textColor="#666666"
                        android:textSize="@dimen/text_32" />
                    <TextView
                        android:id="@+id/goods_price_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_5_0"
                        android:text="¥123456"
                        android:textColor="#ff8434"
                        android:textSize="@dimen/text_32" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pingjia_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom">
                    <Button
                        android:id="@+id/pingjia_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="42dp"
                        android:text="评价"
                        android:layout_marginBottom="@dimen/space_5_0"
                        android:textColor="@color/white"
                        android:background="@drawable/btn_order_bg_orange"
                        android:layout_marginRight="@dimen/space_10"
                        android:textSize="@dimen/text_32"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginTop="@dimen/space_8"
        android:background="#e5e5e5" />

</LinearLayout>