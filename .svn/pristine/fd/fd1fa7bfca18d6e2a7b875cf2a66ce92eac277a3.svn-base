<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/height_50"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/space_15_0"
    android:layout_marginLeft="@dimen/space_5_0"
    android:layout_marginRight="@dimen/space_15_0"
    android:layout_marginStart="@dimen/space_5_0"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_15_0"
        android:background="@mipmap/feeds_list_report_top7"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="@dimen/space_5_0"
            android:layout_marginRight="@dimen/space_5_0"
            android:background="@drawable/feeds_timeline_top_line" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/photo_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="07"
                android:textColor="@color/text_sub"
                android:textSize="@dimen/text_38"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="æ—¥"
                android:textColor="@color/text_sub"
                android:textSize="@dimen/text_24" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/photo_month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/feeds_timeline_bottom"
        android:gravity="center"
        android:text="2015.08"
        android:textColor="@color/white"
        android:textSize="@dimen/text_20" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/photo_time_more"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/space_5_0" />
</LinearLayout>
