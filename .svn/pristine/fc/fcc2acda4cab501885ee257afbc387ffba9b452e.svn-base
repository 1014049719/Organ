<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/iv_FrameLayout_browser"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg">

    <ImageView
        android:id="@+id/iv_pic_browser"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/space_3_0"
        android:scaleType="centerCrop"
        android:src="@mipmap/load_image_200" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/space_3_0"
        android:layout_marginRight="@dimen/space_3_0"
        android:background="@color/transparent_7"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/cb_pic_already_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"
            android:gravity="center"
            android:src="@mipmap/photo_ysc"
            android:visibility="gone" />
        <TextView
            android:id="@+id/tv_timer"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/space_10_0"
            android:textColor="@color/white"
            android:textSize="@dimen/text_28"
            android:layout_gravity="center_vertical" />
        <ImageView
            android:id="@+id/cb_pic_browser"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:checked="true"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:visibility="invisible"
            android:src="@mipmap/checkbox_album_img_selected" />
    </LinearLayout>
</FrameLayout>