<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lsg="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_15_0"
        android:gravity="center"
        android:orientation="horizontal">
        <com.talenton.base.widget.CircleImageView
            android:id="@+id/circle_photo"
            android:layout_width="@dimen/height_50"
            android:layout_height="@dimen/height_50"
            android:src="@mipmap/user_photo"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            lsg:civ_border_color="@color/white"
            lsg:civ_border_width="2dp" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/space_5_0"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_circle_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="@dimen/text_32"
                android:textColor="@color/text_main"
                android:layout_marginBottom="@dimen/space_5_0"/>
            <TextView
                android:id="@+id/tv_circle_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="@dimen/text_24"
                android:textColor="@color/text_sub" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_attention"
            android:layout_width="@dimen/height_70"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/space_5_0"
            android:background="@drawable/btn_main_bg_selector"
            android:singleLine="true"
            android:text="66666关注"
            android:textSize="@dimen/text_24"
            android:gravity="center"
            android:textColor="@color/white"
            />
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_attention_2"
            android:layout_width="@dimen/height_50"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/space_5_0"
            android:background="@drawable/btn_main_bg_selector"
            android:singleLine="true"
            android:text="关注"
            android:textSize="@dimen/text_24"
            android:gravity="center"
            android:textColor="@color/white"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/list_div_color"/>
</LinearLayout>
