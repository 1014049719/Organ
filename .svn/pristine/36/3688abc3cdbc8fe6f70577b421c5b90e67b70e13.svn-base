<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.talenton.organ.ui.user.AttentionUserAppActivity">
    <ViewStub
        android:id="@+id/vs_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/global_app_bar" />
    <LinearLayout
        style="@style/common_layout_edit_text"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_invite_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/space_10_0"
            android:hint="@string/circle_prompt_attention_by_code"
            android:textColorHint="@color/text_light"
            android:background="@null"
            android:maxLines="1"
            android:singleLine="true"
            android:ems="20"
            android:numeric="integer"
            android:textSize="@dimen/text_32" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_notice"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_15_0"
        android:text="*验证邀请码后，即可体验TA定制的专属应用"
        android:textColor="@color/text_main_6"
        android:textSize="@dimen/text_26" />
</LinearLayout>
