<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bbg="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/space_15_0"
        android:paddingBottom="@dimen/space_15_0"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <com.talenton.base.widget.CircleImageView
            android:id="@+id/user_logo"
            android:layout_width="@dimen/height_50"
            android:layout_height="@dimen/height_50"
            android:layout_marginLeft="@dimen/space_15_0"
            android:scaleType="centerCrop"
            android:src="@mipmap/user_photo"
            bbg:civ_border_color="@color/white"
            bbg:civ_border_width="2dp" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/space_10_0">
            <TextView
                android:id="@+id/member_num_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="圈子成员："
                android:textColor="@color/text_main"
                android:textSize="@dimen/text_28" />
            <TextView
                android:id="@+id/member_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/member_num_text"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_28" />
            <TextView
                android:id="@+id/tv_topics_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10_0"
                android:layout_below="@+id/member_num_text"
                android:gravity="right"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="今天话题："
                android:textColor="@color/text_main"
                android:textSize="@dimen/text_28" />
            <TextView
                android:id="@+id/tv_topics_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10_0"
                android:layout_below="@+id/member_num_text"
                android:layout_toRightOf="@+id/tv_topics_text"
                android:gravity="right"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_28" />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/space_15_0"
        android:background="@color/list_div_color"/>
    <LinearLayout
        android:id="@+id/layout_arrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/space_15_0"
        android:paddingBottom="@dimen/space_15_0"
        android:layout_marginBottom="@dimen/space_10_0"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/btn_white_bg_selector">
        <LinearLayout
            android:id="@+id/layout_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/space_15_0">

        </LinearLayout>
        <ImageView
            android:layout_width="@dimen/space_15_0"
            android:layout_height="@dimen/space_15_0"
            android:layout_marginRight="@dimen/space_15_0"
            android:src="@mipmap/xy_icon"/>
    </LinearLayout>
</LinearLayout>