<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray"
    tools:context="com.talenton.organ.ui.user.ChildInfoActivity">

    <ViewStub
        android:id="@+id/vs_action_bar"
        layout="@layout/global_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- 性名 -->
            <RelativeLayout
                android:id="@+id/rl_name"
                android:background="@drawable/btn_mine_click_selector"
                android:paddingLeft="@dimen/space_15_0"
                android:paddingRight="@dimen/space_15_0"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_53">

                <TextView
                    android:id="@+id/tv_name_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_main"
                    android:text="@string/mine_text_user_name"
                    android:textSize="@dimen/text_32"
                    android:layout_centerVertical="true" />


                <TextView
                    android:id="@+id/tv_name"
                    android:layout_toRightOf="@+id/tv_name_tips"
                    android:layout_marginLeft="@dimen/space_5_0"
                    android:gravity="right"
                    android:ellipsize="middle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_main"
                    android:singleLine="true"
                    android:textSize="@dimen/text_32"
                    android:drawableRight="@mipmap/xy_icon"
                    android:drawablePadding="@dimen/space_5_0"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_marginLeft="@dimen/space_15_0"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_0_5"
                    android:background="@color/divider_line" />
            </LinearLayout>

            <!-- 出生日期 -->
            <RelativeLayout
                android:id="@+id/rl_birthday"
                android:background="@drawable/btn_mine_click_selector"
                android:paddingLeft="@dimen/space_15_0"
                android:paddingRight="@dimen/space_15_0"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_53">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_main"
                    android:text="@string/mine_text_birthday"
                    android:textSize="@dimen/text_32"
                    android:layout_centerVertical="true" />


                <TextView
                    android:id="@+id/tv_birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_main"
                    android:textSize="@dimen/text_32"
                    android:drawableRight="@mipmap/xy_icon"
                    android:drawablePadding="@dimen/space_5_0"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_marginLeft="@dimen/space_15_0"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_0_5"
                    android:background="@color/divider_line" />
            </LinearLayout>

            <!-- 学校 -->
            <RelativeLayout
                android:id="@+id/rl_school"
                android:background="@drawable/btn_mine_click_selector"
                android:paddingLeft="@dimen/space_15_0"
                android:paddingRight="@dimen/space_15_0"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_53">

                <TextView
                    android:id="@+id/tv_school_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_main"
                    android:text="@string/mine_text_school"
                    android:textSize="@dimen/text_32"
                    android:layout_centerVertical="true" />


                <TextView
                    android:id="@+id/tv_modify_status"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_school_tips"
                    android:textSize="@dimen/text_28"
                    android:text="@string/mine_text_modify_approval"
                    android:layout_marginLeft="@dimen/space_5_0"
                    android:layout_centerVertical="true"
                    android:textColor="@color/main_blue" />


                <TextView
                    android:id="@+id/tv_school"
                    android:layout_toRightOf="@+id/tv_modify_status"
                    android:layout_marginLeft="@dimen/space_5_0"
                    android:gravity="right"
                    android:ellipsize="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_main"
                    android:textSize="@dimen/text_32"
                    android:drawableRight="@mipmap/xy_icon"
                    android:drawablePadding="@dimen/space_5_0"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>
