<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>
    <style name="Theme.AppCompat.Translucent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>
    <style name="Toolbar_TextAppearance_White">
        <item name="android:textSize">@dimen/text_28</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="main_bottom_bar_radio_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@drawable/main_menu_text_selector</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingTop">@dimen/space_2_0</item>
        <item name="android:paddingBottom">@dimen/space_4_0</item>
        <item name="android:drawablePadding">@dimen/space_2_0</item>
    </style>

    <style name="common_dialog" parent="android:style/Theme.Dialog">

        <!-- Fill the screen -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>

        <!-- No backgrounds, titles or window float -->
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="comment_btn_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/space_15_0</item>
        <item name="android:background">@drawable/btn_main_bg_selector</item>
        <item name="android:textSize">@dimen/text_36</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="comment_btn_red_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/space_15_0</item>
        <item name="android:background">@drawable/btn_main_bg_red_selector</item>
        <item name="android:textSize">@dimen/text_36</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="input_type_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/height_40</item>
        <item name="android:minWidth">@dimen/height_100</item>
        <item name="android:textSize">@dimen/text_28</item>
        <item name="android:textColor">@color/text_sub</item>
        <item name="android:gravity">center|left</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:background">@drawable/btn_white_bg_selector</item>
    </style>

    <style name="activity_dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="img_checkbox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_album_img</item>
    </style>

    <style name="small_btn_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:paddingLeft">@dimen/space_15_0</item>
        <item name="android:paddingRight">@dimen/space_15_0</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_main_bg_selector</item>
        <item name="android:textSize">@dimen/text_28</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="match_btn_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/space_10_0</item>
        <item name="android:paddingBottom">@dimen/space_10_0</item>
        <item name="android:layout_marginTop">@dimen/space_10_0</item>
        <item name="android:layout_marginLeft">@dimen/space_15_0</item>
        <item name="android:layout_marginRight">@dimen/space_15_0</item>
        <item name="android:background">@drawable/btn_main_bg_selector</item>
        <item name="android:textSize">@dimen/text_34</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--ratingBar Style -->
    <style name="LSGRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar_selector</item>
        <item name="android:minHeight">25dip</item>
        <item name="android:maxHeight">25dip</item>
    </style>

    <style name="common_layout_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_50</item>
        <item name="android:layout_marginTop">@dimen/space_10_0</item>
        <item name="android:layout_marginLeft">@dimen/space_15_0</item>
        <item name="android:layout_marginRight">@dimen/space_15_0</item>
        <item name="android:background">@drawable/btn_white_corner_bg</item>
    </style>

    <style name="DialogTipsAnim" parent="android:Animation" mce_bogus="1">
        <item name="android:windowEnterAnimation">@anim/dialog_tips_anim_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_tips_anim_out</item>
    </style>

</resources>
