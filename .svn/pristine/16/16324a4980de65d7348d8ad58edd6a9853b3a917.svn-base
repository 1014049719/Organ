<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="@dimen/space_15_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_left"
        android:layout_marginTop="@dimen/space_15_0"
        android:layout_width="@dimen/school_item_left_img_width"
        android:layout_height="@dimen/school_item_left_img_height">

        <ImageView
            android:id="@+id/iv_left"
            android:scaleType="fitXY"
            android:layout_width="@dimen/school_item_left_img_width"
            android:layout_height="@dimen/school_item_left_img_height"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:background="@color/transparent_6"
            android:gravity="center"
            android:id="@+id/tv_join_number"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_left"
            android:text="已有2456参加" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_desc"
        android:layout_marginTop="@dimen/space_15_0"
        android:layout_marginLeft="@dimen/space_15_0"
        android:layout_toRightOf="@+id/rl_left"
        android:textColor="@color/text_main"
        android:textSize="@dimen/text_32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minLines="2"
        android:maxLines="2"
        android:ellipsize="end"
        android:paddingRight="@dimen/space_15_0"
        android:text="2016乐高儿童教育课程之小孩的创造思维开发" />


    <TextView
        android:id="@+id/tv_update_desc"
        android:layout_marginTop="@dimen/space_10"
        android:layout_marginLeft="@dimen/space_15_0"
        android:layout_toRightOf="@+id/rl_left"
        android:layout_below="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已更新至5-3"
        android:paddingRight="@dimen/space_15_0"
        android:textSize="@dimen/text_28"
        android:textColor="@color/text_sub" />



    <TextView
        android:id="@+id/tv_start_time_tips"
        android:drawableLeft="@mipmap/time"
        android:drawablePadding="@dimen/space_5_0"
        android:layout_marginTop="@dimen/space_10"
        android:layout_marginLeft="@dimen/space_15_0"
        android:layout_below="@+id/tv_update_desc"
        android:layout_toRightOf="@+id/rl_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_24"
        android:text="@string/school_class_text_start_time" />

    <TextView
        android:id="@+id/tv_start_time"
        android:layout_toRightOf="@+id/tv_start_time_tips"
        android:layout_marginTop="@dimen/space_10"
        android:layout_below="@+id/tv_update_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_24"
        android:paddingRight="@dimen/space_15_0"
        android:text="2016-03-20" />

    <View
        android:layout_marginTop="@dimen/space_15_0"
        android:layout_below="@+id/tv_start_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_0_5"
        android:background="@color/divider_line" />


</RelativeLayout>