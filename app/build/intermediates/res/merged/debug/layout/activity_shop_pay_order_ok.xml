<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:lsg="http://schemas.android.com/apk/res-auto"
    tools:context="com.talenton.organ.ui.shop.ConfirmOrderActivity">
    <!--优惠-->
    <!--顶部-->
    <ViewStub
        android:id="@+id/vs_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/global_app_bar" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/LinearLayout_pay_ok_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <ImageView

                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:src="@mipmap/icon_shop_pay_order_pepole" />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="收货人:" />
            <TextView
                android:id="@+id/pay_ok_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="吴小祥" />
            <TextView
                android:id="@+id/pay_ok_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="38dp"
                android:text="18620519838" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout_pay_ok_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:src="@mipmap/icon_shop_address" />
            <TextView
                android:id="@+id/pay_ok_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:text="广州市天河区" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout_pay_ok_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="总价:" />
            <TextView
                android:id="@+id/pay_ok_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/red"
                android:layout_weight="1" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon_shop_pay_order_ok"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_shop_pay_order_ok" />
            <TextView
                android:id="@+id/pay_result_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:text="订单已支付" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout_pay_ok_to_order"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/pay_ok_to_order"
                style="@style/comment_btn_style"
                android:layout_marginLeft="15dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="查看订单" >
            </Button>

            <Button
                android:id="@+id/pay_ok_to_first"
                style="@style/comment_btn_style"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="返回首页" >
            </Button>


        </LinearLayout>
    </LinearLayout>



</LinearLayout>
