<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bbg="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.talenton.organ.ui.user.ShowFamilyActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/perfect_bg"
            android:scaleType="centerCrop"/>
        <com.talenton.base.widget.CircleImageView
            android:id="@+id/user_logo"
            android:layout_width="@dimen/mine_avatar_width"
            android:layout_height="@dimen/mine_avatar_width"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@mipmap/user_photo"
            bbg:civ_border_color="@color/white"
            bbg:civ_border_width="2dp" />
        <ImageView
            android:id="@+id/left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/actionbar_back_btn"
            android:padding="@dimen/space_15_0"
            android:scaleType="centerCrop" />
        <ImageView
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/edit_icon"
            android:padding="@dimen/space_15_0"
            android:layout_gravity="right"
            android:scaleType="centerCrop"
            android:background="@drawable/btn_transparent_selector" />
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="3"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_60"
            android:orientation="horizontal" >
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="@dimen/height_60"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_release_dynamic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_34"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发布的动态"
                    android:textColor="@color/text_main"
                    android:textSize="@dimen/text_28" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="1dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical" />

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="@dimen/height_60"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_upload_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_34"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上传照片"
                    android:textColor="@color/text_main"
                    android:textSize="@dimen/text_28" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_50"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/space_10_0">
            <TextView
                android:layout_width="@dimen/height_80"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_15_0"
                android:text="@string/family_relation"
                android:textSize="@dimen/text_28"
                android:textColor="@color/text_sub" />
            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_28"
                android:textColor="@color/text_main"
                android:layout_marginRight="@dimen/space_15_0"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
