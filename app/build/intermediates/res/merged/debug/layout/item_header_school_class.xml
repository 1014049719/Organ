<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <com.talenton.organ.widget.AdvertisementView
        android:id="@+id/ad_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_75" />

    <!-- 筛选区 -->
    <RelativeLayout
        android:layout_marginTop="@dimen/space_15_0"
        android:layout_marginLeft="@dimen/space_15_0"
        android:layout_marginRight="@dimen/space_15_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_filter_age"
            android:gravity="center"
            android:paddingLeft="@dimen/space_10"
            android:paddingRight="@dimen/space_10"
            android:background="@drawable/btn_school_white_corner_bg"
            android:layout_marginLeft="@dimen/space_5_0"
            android:textSize="@dimen/text_28"
            android:textColor="@drawable/btn_indicate_text_selector"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_30"
            android:minWidth="@dimen/width_90"
            android:text="@string/school_class_filter_text_age"
            android:drawablePadding="@dimen/space_5_0"
            android:drawableRight="@drawable/btn_indicate_selector" />



        <RadioGroup
            android:id="@+id/rg_filter"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_width="@dimen/width_120"
            android:layout_height="@dimen/height_30">

            <RadioButton
                android:id="@+id/rbtn_filter_hot"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/text_main"
                android:textSize="@dimen/text_28"
                style="@style/main_bottom_bar_radio_style"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/school_class_list_filter_hot"
                android:background="@drawable/btn_half_corner_left_selector" />

            <RadioButton
                android:id="@+id/rbtn_filter_last"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/text_main"
                android:textSize="@dimen/text_28"
                style="@style/main_bottom_bar_radio_style"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/school_class_list_filter_last"
                android:background="@drawable/btn_half_corner_right_selector" />

        </RadioGroup>

    </RelativeLayout>

    <View
        android:id="@+id/divider_line"
        android:layout_marginTop="@dimen/space_15_0"
        android:background="@color/divider_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_0_5"/>

</LinearLayout>