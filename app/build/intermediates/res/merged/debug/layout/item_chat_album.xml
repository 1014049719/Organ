<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/setting_item_bg"
    android:padding="6dp"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_chat_album_first"
        android:scaleType="centerCrop"
        android:layout_marginLeft="@dimen/space_10_0"
        android:layout_width="@dimen/width_60"
        android:layout_height="@dimen/width_60" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_chat_album_first"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/space_15_0">

        <TextView
            android:id="@+id/tv_chat_album_title"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:textSize="18sp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_chat_album_count"
            android:layout_width="wrap_content"
            android:textColor="#a3a3a3"
            android:singleLine="true"
            android:textSize="14sp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/go"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/space_10_0"
        android:layout_alignParentRight="true" />

</RelativeLayout>
