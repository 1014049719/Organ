<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lsg="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_white_bg_selector">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/space_15_0"
        android:paddingRight="@dimen/space_15_0"
        android:paddingTop="@dimen/space_10_0"
        android:paddingBottom="@dimen/space_10_0"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <com.talenton.base.widget.CircleImageView
            android:id="@+id/user_image"
            android:layout_width="@dimen/height_70"
            android:layout_height="@dimen/height_70"
            android:src="@mipmap/user_photo"
            android:scaleType="centerCrop"
            lsg:civ_border_color="@color/white"
            lsg:civ_border_width="2dp" />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/space_10_0"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_main"
                android:textSize="@dimen/text_30"
                android:layout_marginBottom="@dimen/space_5_0" />
            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_5_0"
                android:layout_toRightOf="@+id/tv_name"
                android:paddingRight="@dimen/space_10_0"
                android:paddingLeft="@dimen/space_10_0"
                android:paddingTop="@dimen/space_2_0"
                android:paddingBottom="@dimen/space_2_0"
                android:textSize="@dimen/text_24"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/tv_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name"
                android:textColor="@color/text_sub"
                android:textSize="@dimen/text_24" />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_browser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_28"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="@dimen/height_15"
            android:layout_height="@dimen/height_15"
            android:src="@mipmap/xy_icon"
            android:scaleType="centerCrop"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/list_div_color"/>
</LinearLayout>