<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_53"
    android:background="@color/white">

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/space_10_0">
        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_10"
            android:src="@mipmap/shop" />
        <TextView
            android:layout_toRightOf="@+id/image"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/TitleTv"
            android:layout_weight="1"
            android:textSize="@dimen/text_28"/>

        <TextView
            android:id="@+id/noReadNum_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ease_unread_dot"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="@dimen/text_20"
            android:padding="4dp"
            android:layout_marginRight="@dimen/space_20_0"
            android:layout_toLeftOf="@+id/imageView"
            android:gravity="center"
            />

        <ImageView
            android:layout_marginRight="@dimen/space_10"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/go" />
    </LinearLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider_line"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/space_10_0"/>

</RelativeLayout>