<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/space_20_0"
    android:background="@drawable/btn_white_corner_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_text_jump"
        android:textSize="@dimen/text_32"
        android:textColor="@color/text_main" />

    <EditText
        android:id="@+id/et_input"
        android:layout_marginTop="@dimen/space_30_0"
        android:layout_toLeftOf="@+id/tv_page_tips"
        android:layout_below="@+id/tv_title"
        android:layout_width="match_parent"
        android:inputType="number"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_page_tips"
        android:layout_alignTop="@+id/et_input"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:layout_alignBottom="@+id/et_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_sub"
        android:textSize="@dimen/text_28"
        android:text="(1-11)" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_marginTop="@dimen/space_15_0"
        android:layout_below="@+id/et_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_main"
        android:text="@string/dialog_text_cancel"
        android:textSize="@dimen/text_32" />


    <TextView
        android:id="@+id/tv_confirm"
        android:layout_marginTop="@dimen/space_15_0"
        android:layout_below="@+id/et_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_sub"
        android:text="@string/dialog_text_confirm"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/text_32" />

</RelativeLayout>