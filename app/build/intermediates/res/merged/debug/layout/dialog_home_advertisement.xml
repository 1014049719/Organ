<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6">
        <ImageView
            android:id="@+id/iv_advertisement"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="centerCrop" />
        <ImageView
            android:id="@+id/iv_advertisement_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/height_30"
            android:layout_gravity="left"
            android:scaleType="centerCrop" />
        <TextView
            android:id="@+id/tv_Advertisement_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_20_0"
            android:textColor="@color/menu_main"
            android:textSize="@dimen/text_28"/>

    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:drawableLeft="@mipmap/ic_launcher"
            android:drawablePadding="@dimen/space_5_0"
            android:text="@string/app_name"
            android:textSize="@dimen/text_42"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_5_0"
            android:text="@string/main_copyright"
            android:textColor="@color/text_sub"
            android:textSize="@dimen/text_24" />
    </LinearLayout>

</LinearLayout>
