<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/gray"
    android:orientation="horizontal"
    android:layout_height="@dimen/height_45" >

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/et_input"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_30"
            android:background="@drawable/btn_et_white_big_corner"
            android:hint="@string/school_hint_text_search"
            android:drawableLeft="@mipmap/search"
            android:drawablePadding="@dimen/space_10"
            android:layout_marginLeft="@dimen/space_15_0"
            android:layout_marginRight="@dimen/space_15_0"
            android:gravity="center_vertical"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:textSize="@dimen/text_28"
            android:textColorHint="@color/text_sub"
            android:paddingLeft="@dimen/space_15_0"
            android:paddingRight="@dimen/space_40_0"
            android:singleLine="true" />


        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/delete"
            android:layout_alignRight="@+id/et_input"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_15_0" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_search"
        android:layout_width="@dimen/width_60"
        android:layout_height="@dimen/height_30"
        android:textSize="@dimen/text_28"
        android:text="@string/school_text_search"
        android:textColor="@color/white"
        android:background="@drawable/btn_bg_corner_blue"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/space_15_0" />

</LinearLayout>
